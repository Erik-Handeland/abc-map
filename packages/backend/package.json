{
  "name": "@abc-map/backend",
  "version": "0.0.1",
  "main": "build/index.js",
  "license": "GNU GPL v3",
  "scripts": {
    "start": "node --trace-warnings ./build/main.js",
    "start:watch": "nodemon --trace-warnings --watch build ./build/main.js",
    "clean": "rm -rf build",
    "build": "tsc",
    "watch": "tsc --watch | sed -u 's/\\x1Bc//g'",
    "clean-build": "npm run clean && npm run build",
    "lint": "eslint './src/**/*.ts' --fix --max-warnings=0",
    "test": "mocha --trace-warnings 'build/**/*.test.js'",
    "coverage": "nyc npm run test"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.4",
    "@types/sinon": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "chai": "^4.2.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "sinon": "^9.2.1",
    "source-map-support": "^0.5.19",
    "typescript": "^4.0.5",
    "prettier": "^2.1.2"
  }
}
