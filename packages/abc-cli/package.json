{
  "name": "@abc-map/abc-cli",
  "version": "0.1.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "files": [
    "build"
  ],
  "scripts": {
    "clean": "rm -rf build",
    "build": "tsc",
    "watch": "tsc --watch | sed -u 's/\\x1Bc//g'",
    "clean-build": "yarn run clean && yarn run build",
    "lint": "eslint './src/**/*.ts' --max-warnings=0",
    "lint-fix": "yarn run lint --fix",
    "coverage": "nyc mocha --trace-warnings 'build/**/*.test.js'",
    "test": "mocha --trace-warnings 'build/**/*.test.js'",
    "dep-check": "depcruise -c .dependency-cruiser.js src"
  },
  "dependencies": {
    "fast-glob": "^3.2.7",
    "lerna": "^4.0.0",
    "loglevel": "^1.7.1",
    "sort-package-json": "^1.50.0",
    "source-map-support": "^0.5.19",
    "verdaccio": "^5.1.3",
    "wait-on": "^6.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.11",
    "@types/wait-on": "^5.3.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "chai": "^4.3.4",
    "dependency-cruiser": "^10.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^3.4.1",
    "mocha": "^9.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  }
}
