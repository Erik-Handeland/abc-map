{
  "name": "@abc-map/server",
  "version": "0.1.0",
  "license": "AGPL-3.0-or-later",
  "main": "build/main.js",
  "files": [
    "build"
  ],
  "scripts": {
    "start:e2e": "node ./build/main.js",
    "start:watch": "nodemon --trace-warnings --watch build ./build/main.js",
    "clean": "rm -rf build",
    "build": "tsc",
    "watch": "tsc --watch | sed -u 's/\\x1Bc//g'",
    "clean-build": "yarn run clean && yarn run build",
    "lint": "eslint './src/**/*.ts' --max-warnings=0",
    "lint-fix": "yarn run lint --fix",
    "coverage": "nyc mocha --trace-warnings 'build/**/*.test.js'",
    "test": "mocha --trace-warnings 'build/**/*.test.js'",
    "dep-check": "depcruise -c .dependency-cruiser.js src"
  },
  "dependencies": {
    "@abc-map/shared": "0.1.0",
    "ajv": "6.12.6",
    "bson": "^1.1.4",
    "fastify": "^3.15.1",
    "fastify-jwt": "^2.4.0",
    "fastify-multipart": "^4.0.6",
    "fastify-rate-limit": "^5.5.0",
    "fastify-sensible": "^3.1.1",
    "fastify-static": "^4.2.1",
    "glob": "^7.1.6",
    "helmet": "^4.6.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.20",
    "luxon": "^1.27.0",
    "mongodb": "^3.6.7",
    "nodemailer": "^6.4.17",
    "prom-client": "^13.1.0",
    "source-map-support": "^0.5.19",
    "uuid-random": "^1.3.2"
  },
  "devDependencies": {
    "@types/bson": "^1.0.11",
    "@types/chai": "^4.2.18",
    "@types/geojson": "^7946.0.7",
    "@types/glob": "^7.1.3",
    "@types/js-yaml": "^4.0.1",
    "@types/lodash": "^4.14.165",
    "@types/luxon": "^1.26.5",
    "@types/mocha": "^8.0.4",
    "@types/mongodb": "^3.6.14",
    "@types/node": "^14.17.0",
    "@types/nodemailer": "^6.4.0",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "chai": "^4.2.0",
    "dependency-cruiser": "10.0.1",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-prettier": "^3.3.1",
    "form-data": "^4.0.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "prettier": "^2.3.0",
    "sinon": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "docker": {
    "imageName": "server"
  }
}
